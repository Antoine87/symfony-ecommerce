{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Maybe better solution for vertical align with a navbar header ? */
        html, body {
            height: 90%;
        }
    </style>
{% endblock %}

{% block body_id 'customer_login' %}

{% block body %}
    <main class="d-flex h-100 text-center">
        <form class="form-signin" method="post">
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            <label for="inputLogin" class="sr-only">Login</label>
            <input type="text" value="" name="login" id="inputLogin" class="form-control" placeholder="Login" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
            {#<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">#}
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_terms"> Aggree to terms
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Register
            </button>
        </form>
    </main>
{% endblock %}
